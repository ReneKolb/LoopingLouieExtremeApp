<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#057205" />
            <gradient android:angle="-90" android:startColor="#045916" android:endColor="#228b22" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#057205" />
            <solid android:color="#e0341e" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#333333" />
            <gradient android:angle="-90" android:startColor="#999999" android:endColor="#555555" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="3dip" android:color="#008000" />
            <solid android:color="#00cc00" />
        </shape>
    </item>
</selector>