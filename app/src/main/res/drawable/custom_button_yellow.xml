<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#b8a60f" />
            <gradient android:angle="-90" android:startColor="#dab008" android:endColor="#ffe118" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#b8a60f" />
            <solid android:color="#e0341e" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#b8a60f" />
            <gradient android:angle="-90" android:startColor="#e4e215" android:endColor="#f6d80e" />
        </shape>
    </item>
</selector>