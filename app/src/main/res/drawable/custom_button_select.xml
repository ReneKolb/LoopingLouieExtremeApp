<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#598e96" />
            <gradient android:angle="-90" android:startColor="#27646c" android:endColor="#7fbac6" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#598e96" />
            <solid android:color="#4ea0ab" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#4d4a4d" />
            <gradient android:angle="-90" android:startColor="#4d4a4d" android:endColor="#262526" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#4d4a4d" />
            <solid android:color="#c2bcc2" />
        </shape>
    </item>
</selector>