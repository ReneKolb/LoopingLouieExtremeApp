<de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    android:padding="15dp"
    android:clickable="true"
    tools:context="de.renekolb.loopinglouieextreme.ui.GameResultFragment">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spielergebnisse"
        android:id="@+id/tv_game_results_title"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_game_results_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Game Time: "
        android:layout_below="@+id/tv_game_results_title"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_game_results_time_cnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_game_results_time"
        android:layout_toEndOf="@id/tv_game_results_time"
        android:layout_toRightOf="@id/tv_game_results_time"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="00:00"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1."
        android:id="@+id/tv_game_results_first_player"
        android:layout_below="@+id/tv_game_results_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="35sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2."
        android:id="@+id/tv_game_results_second_player"
        android:layout_below="@+id/tv_game_results_first_player"
        android:layout_alignLeft="@id/tv_game_results_first_player"
        android:layout_alignStart="@id/tv_game_results_first_player"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3."
        android:id="@+id/tv_game_results_third_player"
        android:layout_below="@+id/tv_game_results_second_player"
        android:layout_alignLeft="@+id/tv_game_results_second_player"
        android:layout_alignStart="@+id/tv_game_results_second_player"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4."
        android:id="@+id/tv_game_results_fourth_player"
        android:layout_below="@+id/tv_game_results_third_player"
        android:layout_alignLeft="@+id/tv_game_results_third_player"
        android:layout_alignStart="@+id/tv_game_results_third_player"
        android:textColor="#000000"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wheel of Fortune"
        android:id="@+id/btn_game_results_wheel_of_fortune"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>


</de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate>
