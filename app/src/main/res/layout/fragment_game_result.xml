<de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_little_pluses"
    android:clickable="true"
    tools:context="de.renekolb.loopinglouieextreme.ui.GameResultFragment">

    <TextView
        android:id="@+id/tv_game_results_title"
        style="@style/tv_header"
        android:text="@string/player_results_title" />

    <TableLayout
        android:id="@+id/tl_game_results"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_game_results_title"
        android:layout_marginLeft="@dimen/margin_horz"
        android:layout_marginRight="@dimen/margin_horz"
        android:layout_marginTop="@dimen/margin_vert">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Rang"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="3.5"
                android:layout_column="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:text="Spieler"/>

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="2"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Punkte"/>

        </TableRow>

        <TableRow
            android:id="@+id/tr_game_results_first"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="1."/>

            <TextView
                android:id="@+id/tv_game_results_player_first"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="6"
                android:layout_column="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:text="G端nther"/>

            <TextView
                android:id="@+id/tv_game_results_points_first"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="2"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="18sp"
                android:text="4"/>

        </TableRow>

        <TableRow
            android:id="@+id/tr_game_results_second">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="2."/>

            <TextView
                android:id="@+id/tv_game_results_player_second"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="6"
                android:layout_column="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:text="G端nther2"/>

            <TextView
                android:id="@+id/tv_game_results_points_second"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="2"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="18sp"
                android:text="3"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_game_results_third">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="3."/>

            <TextView
                android:id="@+id/tv_game_results_player_third"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="6"
                android:layout_column="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:text="G端nther4"/>

            <TextView
                android:id="@+id/tv_game_results_points_third"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="2"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="18sp"
                android:text="2"/>
        </TableRow>

        <TableRow
            android:id="@+id/tr_game_results_fourth">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="0"
                android:textColor="#000000"
                android:textSize="18sp"
                android:text="4."/>

            <TextView
                android:id="@+id/tv_game_results_player_fourth"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="6"
                android:layout_column="1"
                android:textColor="#000000"
                android:textSize="18sp"
                android:gravity="center"
                android:text="G端nther33"/>

            <TextView
                android:id="@+id/tv_game_results_points_fourth"
                android:layout_height="wrap_content"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_column="2"
                android:textColor="#000000"
                android:gravity="end"
                android:textSize="18sp"
                android:text="1"/>
        </TableRow>

    </TableLayout>


    <TextView
        android:id="@+id/tv_game_results_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_results_time"
        tools:text="Game Time: 00:25"
        android:layout_below="@+id/tl_game_results"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="@dimen/margin_horz"
        android:layout_marginStart="@dimen/margin_horz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_game_results_wheel_of_fortune"
        style="@style/btnSelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_game_results_wof"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_vert"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_above="@id/btn_game_results_wheel_of_fortune">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:adjustViewBounds="true"
            android:layout_marginTop="55dp"
            android:src="@drawable/siegertreppchen"/>

        <ImageView
            android:id="@+id/iv_game_results_second"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/ball_green"/>

        <ImageView
            android:id="@+id/iv_game_results_first"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="118dp"
            android:src="@drawable/ball_red"/>

        <ImageView
            android:id="@+id/iv_game_results_third"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="212dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/ball_purple"/>

    </RelativeLayout>

</de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate>
