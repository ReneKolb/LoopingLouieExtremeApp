<de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:clickable="true"
    tools:context="de.renekolb.loopinglouieextreme.ui.GameResultFragment">


    <TextView
        android:id="@+id/tv_game_results_title"
        style="@style/tv_header"
        android:text="@string/player_results_title" />

    <TextView
        android:id="@+id/tv_game_results_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/player_results_time"
        android:layout_below="@+id/tv_game_results_title"
        android:layout_marginTop="@dimen/margin_vert"
        android:layout_marginLeft="@dimen/margin_horz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1. GÃ¼nther  +4 (47)"
        tools:background="#FF0000"
        android:id="@+id/tv_game_results_first_player"
        android:layout_below="@+id/tv_game_results_time"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="@dimen/margin_horz"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2. Gudrun  +3 (20)"
        tools:background="#00FF00"
        android:id="@+id/tv_game_results_second_player"
        android:layout_below="@+id/tv_game_results_first_player"
        android:layout_alignLeft="@id/tv_game_results_first_player"
        android:layout_alignStart="@id/tv_game_results_first_player"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="3. Seppel  +2 (10)"
        tools:background="#880088"
        android:id="@+id/tv_game_results_third_player"
        android:layout_below="@+id/tv_game_results_second_player"
        android:layout_alignLeft="@+id/tv_game_results_second_player"
        android:layout_alignStart="@+id/tv_game_results_second_player"
        android:textColor="#000000"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="4. Antje  +1 (5)"
        tools:background="#DDDD00"
        android:id="@+id/tv_game_results_fourth_player"
        android:layout_below="@+id/tv_game_results_third_player"
        android:layout_alignLeft="@+id/tv_game_results_third_player"
        android:layout_alignStart="@+id/tv_game_results_third_player"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_game_results_wof"
        android:id="@+id/btn_game_results_wheel_of_fortune"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin_vert"/>


</de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate>
