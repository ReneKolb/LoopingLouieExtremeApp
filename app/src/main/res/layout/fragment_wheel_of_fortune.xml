<de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.renekolb.loopinglouieextreme.ui.WheelOfFortuneFragment"
    android:background="#FFFACD"
    android:clickable="true">


    <TextView
        android:id="@+id/tv_wheel_of_fortune_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The Wheel of Fortune"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_wheel_of_fortune_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player XY"
        android:layout_below="@id/tv_wheel_of_fortune_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"/>

    <ImageSwitcher
        android:id="@+id/is_wheel_of_fortune"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:scaleType="fitCenter">

    </ImageSwitcher>

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/iv_wheel_of_fortune"
        android:layout_centerInParent="true"
        android:src="@drawable/wheel_of_fortune_winner"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"/>-->

    <ImageView
        android:id="@+id/iv_wheel_of_fortune_pointer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pointer"
        android:layout_marginBottom="-25dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/is_wheel_of_fortune" />

    <TextView
        android:id="@+id/tv_wheel_of_fortune_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drehe am Rad"
        android:layout_below="@id/is_wheel_of_fortune"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_wheel_of_fortune_next_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Round"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"/>


</de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate>
