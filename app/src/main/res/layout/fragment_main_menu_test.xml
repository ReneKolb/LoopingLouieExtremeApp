<de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background"
    android:clickable="true"
    android:orientation="vertical"
    tools:context="de.renekolb.loopinglouieextreme.ui.MainMenuFragment">

    <TextView
        android:id="@+id/tv_main_menu_profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:text="@string/main_menu_logged_in_as"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/tv_main_menu_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_main_menu_profile_text"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="#262626"
        tools:text="Profile Name" />

    <LinearLayout
        android:id="@+id/ll_main_menu_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_main_menu_server"
            style="@style/btnStyleGreen"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginStart="30dp"
            android:layout_weight="1"
            android:text="@string/btn_server" />

        <Button
            android:id="@+id/btn_main_menu_client"
            style="@style/btnStyleYellow"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginEnd="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/btn_client" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_main_menu_settings"
        style="@style/btnStyleMenuSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_settings_black" />

    <ImageButton
        android:id="@+id/btn_main_menu_profile"
        style="@style/btnStyleMenuSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_below="@id/btn_main_menu_settings"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile" />

    <ImageButton
        android:id="@+id/btn_main_menu_achievements"
        style="@style/btnStyleMenuSmall"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/btn_main_menu_profile"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_achievement" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_below="@id/btn_main_menu_achievements"
        android:layout_above="@id/ll_main_menu_buttons">

        <ImageView
            android:id="@+id/iv_main_menu_text_looping_louie"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="8"
            android:adjustViewBounds="true"
            android:src="@drawable/title_looping_louie" />


        <ImageView
            android:id="@+id/iv_main_menu_logo"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="30"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:adjustViewBounds="true"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/iv_main_menu_text_extreme"
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="10"
            android:adjustViewBounds="true"
            android:src="@drawable/title_extreme" />
    </LinearLayout>


    <TextView
        android:id="@+id/tv_main_menu_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:textColor="#000000"
        tools:text="Version x.x" />


</de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate>
