<de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFACD"
    android:padding="15dp"
    android:clickable="true"
    tools:context="de.renekolb.loopinglouieextreme.ui.GameFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="DUMMY\ngame is running..."
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/tv_game_round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_round"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/tv_game_seconds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_game_round"
        android:layout_toRightOf="@+id/tv_game_round"
        android:layout_toEndOf="@+id/tv_game_round"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:textColor="#F4A625"
        tools:text="08:13" />

</de.renekolb.loopinglouieextreme.CustomViews.RelativeLayoutAnimate>
